{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pln",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#date"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "meta.selector.pln",
					"begin": "function{",
					"end": "}",
					"patterns": [
						{
							"name": "markup.bold.pln",
							"match": "(\\.)|(\\[)|(\\])|(\\()|(\\))|(\\:)|(=)"
						},
						{
							"name": "comment.pln",
							"match": "."
						}
					]
				},
				{
					"name": "meta.selector.pln",
					"match": "(:New)|(:InProgress)|(:Blocked)|(:ReadyForQA)|(:Done)"
				},
				{
					"name": "comment.pln",
					"match": "(#.*)|(\/\/.*)"
				},
				{
					"name": "markup.bold.pln",
					"match": "(Story:)|(Backlog:)|(Sprint:)|(Task:)|(APT-[0-9]{1,4}):"
				},
				{
					"name": "entity.other.attribute-name.pln",
					"match": "(Description:)|(StartDate:)|(EndDate:)|(LastModified:)|(Point:)"
				},
				{
					"match": "(Status:)( *)(\\w*)",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name.pln"
						},
						"3": {
							"name": "meta.selector.pln"
						}
					}
				},
				{
					"__match": "(Story:)(.*)(As a user)(.*)(so that)",
					"__captures": {
						"1": {
							"name": "markup.bold.pln"
						},
						"3": {
							"name": "meta.selector.pln"
						},
						"5": {
							"name": "markup.deleted.pln"
						}
					}
				},
				{
					"match": "(Developer:|Team:|Tester:)( *)(.*)",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name.pln"
						},
						"3": {
							"name": "markup.deleted.pln"
						}
					}
				}
			]
		},
		"date": {
			"patterns": [
				{
					"_data_": "00:00:00, 0:0:0, 00:00:00 AM",
					"match": "([0-9]{1,2}:[0-9]{1,2}:[0-9]{1,2})( AM| PM|)",
					"captures": {
						"1": {
							"name": "meta.selector.pln"
						},
						"2": {
							"name": "meta.selector.pln"
						}
					}
				},
				{
					"_data_": "Feb 15 2018, Feb 15 18",
					"match": "([a-zA-Z]{3} [0-9]{1,2} [0-9]{2,4})",
					"captures": {
						"1": {
							"name": "markup.deleted.pln"
						}
					}
				},
				{
					"_data_": "2018/01/01",
					"match": "([0-9]{2,4}\/[0-9]{2,2}\/[0-9]{2,2})",
					"captures": {
						"1": {
							"name": "markup.deleted.pln"
						}
					}
				}
			]
		}
	},
	"scopeName": "source.pln"
}